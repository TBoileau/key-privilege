{% extends 'layouts/default.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-12 mb-3">
            <div id="carousel-home" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <a href="#" data-bs-target="#carousel-home" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1">
                        <img src="{{ asset("build/images/SLIDE_01.jpg") }}" alt="Slide 1">
                    </a>
                    <a href="#" data-bs-target="#carousel-home" data-bs-slide-to="1" aria-label="Slide 2">
                        <img src="{{ asset("build/images/SLIDE_02.jpg") }}" alt="Slide 2">
                    </a>
                    <a href="#" data-bs-target="#carousel-home" data-bs-slide-to="2" aria-label="Slide 3">
                        <img src="{{ asset("build/images/SLIDE_03.jpg") }}" alt="Slide 3">
                    </a>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{ asset("build/images/SLIDE_01.jpg") }}">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset("build/images/SLIDE_02.jpg") }}">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset("build/images/SLIDE_02.jpg") }}">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="row g-0 align-items-stretch">
                <div class="d-block d-xl-none col-12 bg-danger p-2">
                    <h1 class="text-white m-0">Nouveaut√©s boutiques</h1>
                </div>
                <div class="d-none d-xl-block col-3">
                    <img src="{{ asset("build/images/NOUVEAUX_PRODUITS.png") }}" alt="Nouveau produits" class="w-100">
                </div>
                <div class="col-12 col-xl-9 p-3 p-xl-2 bg-dark">
                    <div class="row h-100 align-items-stretch">
                        {% for product in products %}
                            <div class="col-12 col-sm-6 col-lg-3 mb-2 mb-lg-0">
                                <a class="card h-100 rounded-0 text-decoration-none text-dark p-0">
                                    <div class="card-body d-flex flex-column justify-content-between align-items-center p-0">
                                        <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="w-50 mb-2 mt-2">
                                        <span class="fw-bold mb-1">{{ product.brand.name }}</span>
                                        <span class="mb-2">{{ product.name|u.truncate(20, '...', true) }}</span>
                                        <div class="w-100 bg-danger d-flex justify-content-center align-items-center text-white fs-4 fw-bold big mb-2">
                                            {{ product.amount }} <span class="ms-1 icon icon-lg icon-key"></span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
