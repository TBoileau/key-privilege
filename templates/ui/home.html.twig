{% extends 'layouts/default.html.twig' %}

{% block main_class %}{% endblock %}

{% block page %}home{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row g-0">
            <div class="col-12">
                <div id="carousel-home" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carousel-home" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carousel-home" data-bs-slide-to="1" aria-current="true" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carousel-home" data-bs-slide-to="2" aria-current="true" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="{{ asset("build/images/visuel_carrousel_desktop.jpg") }}" class="d-none d-lg-block w-100" />
                            <img src="{{ asset("build/images/visuel_carrousel_mobile.jpg") }}" class="d-block d-lg-none w-100" />
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset("build/images/carrousel2.jpg") }}" class="d-none d-lg-block w-100" />
                            <img src="{{ asset("build/images/carrousel2_mobile.jpg") }}" class="d-block d-lg-none w-100" />
                        </div>
                        <div class="carousel-item">
                            <img src="{{ asset("build/images/carrousel3_mobile.jpg") }}" class="d-none d-lg-block w-100" />
                            <img src="{{ asset("build/images/carrousel3.jpg") }}" class="d-block d-lg-none w-100" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row g-0 align-items-stretch">
                    <div class="col-12 my-4">
                        <h1 class="text-white m-0 p-3 bg-gradient d-inline-block text-uppercase">Suggestions boutiques</h1>
                    </div>
                    <div class="col-12">
                        <div class="row h-100 align-items-stretch">
                            {% for product in products %}
                                <div class="col-12 col-sm-6 col-lg-3 mb-4 mb-lg-0">
                                    <a href="{{ path("shop_product", {slug: product.slug}) }}" class="card h-100 rounded-0 text-decoration-none text-dark p-0">
                                        <div class="card-body d-flex flex-column justify-content-between align-items-center p-0">
                                            <img src="{{ asset(product.image) }}" alt="{{ product.name }}" class="w-50 mb-2 mt-2">
                                            <span class="fw-bold mb-1">{{ product.brand.name }}</span>
                                            <span class="mb-2">{{ product.name|u.truncate(20, '...', true) }}</span>
                                            <div class="w-100 bg-danger d-flex justify-content-center align-items-center text-white fs-4 fw-bold big py-2">
                                                {{ product.amount }} <span class="ms-1 icon icon-lg icon-key"></span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
