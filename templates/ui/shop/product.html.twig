{% extends "layouts/page.html.twig" %}

{% set breadcrumbItems = [
    { route: "shop_index", label: "Boutique"},
    { route: "shop_product", routeParams: { slug: product.slug }, label: "Fiche produit"}
] %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">Ficher produit</h1>
                <div class="section-body">
                    <div class="row">
                        <div class="col-5">
                            <img src="{{ asset(product.image) }}" class="w-100" alt="{{ product.brand.name }} - {{ product.name }}">
                        </div>
                        <div class="col-7">
                            <h2 class="fs-1">{{ product.name }}</h2>
                            <span class="fs-5 text-muted mb-4 d-block">{{ product.category.name }} - {{ product.brand.name }}</span>
                            <p class="mb-4">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="bg-danger rounded py-2 px-3 fs-4 d-flex align-items-center text-white">
                                    {{ product.amount }} <span class="ms-1 icon icon-lg icon-key"></span>
                                </div>
                                <a href="#" class="btn btn-danger btn-lg">
                                    <span class="fas fa-cart-arrow-down"></span> Ajouter au panier
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
