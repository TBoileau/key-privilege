{% extends "layouts/page.html.twig" %}

{% set breadcrumbItems = [{ route: "access_clients", label: "Gestion des accès"}, {route: "access_suspend", routeParams: { id: user.id }, label: "Suspendre un accès"}] %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">Gestion des accès</h1>
                <div class="section-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-4">
                            {{ form_start(form) }}
                            <div class="card h-100">
                                <h2 class="card-header">Suspendre un accès</h2>
                                <div class="card-body">
                                    {{ form_errors(form) }}
                                    {{ include("components/alert.html.twig", {
                                        state: "info",
                                        content: "Êtes-vous de vouloir suspendre l'accès de <strong>%s</strong> ?"|format(user.fullName),
                                        class: "mb-0"
                                    }) }}
                                </div>
                                <div class="card-footer p-0 d-flex">
                                    <a href="{{ path("access_clients") }}" class="btn d-block flex-grow-1 btn-outline-secondary rounded-0 border-0">
                                        Retour
                                    </a>
                                    <button type="submit" class="btn d-block flex-grow-1 btn-outline-danger rounded-0 border-0">
                                        Suspendre
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
