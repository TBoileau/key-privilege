{% extends "layouts/%s.html.twig"|format(is_granted("ROLE_USER") ? "page" : "empty") %}

{% block breadcrumb %}
    {% if is_granted("ROLE_USER") %}
        {{ include("components/breadcrumb.html.twig", {items: [{route: "contact", label: "Contact"}]}) }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">
                    <span class="fas fa-envelope me-2"></span>
                    Contact
                </h1>
                <div class="section-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-6">
                            {{ form_start(form) }}
                            <div class="card h-100">
                                <div class="card-body">
                                    {{ form_errors(form) }}
                                    {{ form_row(form.name) }}
                                    {{ form_row(form.email) }}
                                    {{ form_row(form.subject) }}
                                    {{ form_row(form.content) }}
                                </div>
                                <div class="card-footer p-0 d-flex">
                                    <button type="submit" class="btn d-block flex-grow-1 btn-outline-success rounded-0 border-0">
                                        Envoyer
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
