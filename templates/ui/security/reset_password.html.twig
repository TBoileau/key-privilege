{% extends 'layouts/anonymous.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        {{ form_label(form.plainPassword) }}
        <div class="input-group input-group-password">
            {{ form_widget(form.plainPassword) }}
            <button type="button" class="btn btn-light">
                <span class="far"></span>
            </button>
        </div>
        {{ form_errors(form.plainPassword) }}
    </div>
    <div class="text-center mt-4 mt-xxl-5">
        <button class="btn btn-danger mb-4 d-block w-100" type="submit">Valider</button>
        <a href="{{ path("security_login") }}" class="d-inline-block mx-auto">Retour</a>
    </div>
    {{ form_end(form) }}
{% endblock %}
