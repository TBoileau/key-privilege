{% extends 'layouts/anonymous.html.twig' %}

{% block content %}
    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row mb-3 align-content-center">
            {{ form_label(form.username) }}
            <div class="col-12 col-md-7">
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-danger d-block mx-auto mb-3" type="submit">Valider</button>
            <a href="{{ path("security_login") }}" class="d-inline-block mx-auto">Retour</a>
        </div>
    {{ form_end(form) }}
{% endblock %}
