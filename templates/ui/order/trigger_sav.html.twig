{% extends "layouts/page.html.twig" %}

{% set breadcrumbItems = [
    { route: "order_index", label: "Commandes"},
    { route: "order_detail", routeParams: { id: order.id }, label: "Détail"},
    { route: "order_trigger_sav", routeParams: { id: order.id }, label: "Déclencher une demande de SAV"}
] %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">Commande</h1>
                <div class="section-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-6">
                            {{ form_start(form) }}
                            <div class="card h-100">
                                <h2 class="card-header">Déclencher une demande de SAV</h2>
                                <div class="card-body">
                                    {{ form_errors(form) }}
                                    {{ form_row(form.name) }}
                                    {{ form_row(form.email) }}
                                    {{ form_row(form.subject) }}
                                    {{ form_row(form.content) }}
                                </div>
                                <div class="card-footer p-0 d-flex">
                                    <button type="submit" class="btn d-block flex-grow-1 btn-outline-success rounded-0 border-0">
                                        Envoyer
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
