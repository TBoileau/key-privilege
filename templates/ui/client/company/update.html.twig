{% extends "layouts/page.html.twig" %}

{% set breadcrumbItems = [
    { label: "Gestion des clients"},
    { route: "client_company_list", label: "Gestion des sociétés"},
    {route: "client_company_update", routeParams: { id: form.vars.data.id }, label: "Modifier une société"}
] %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">Gestion des sociétés</h1>
                <div class="section-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-4">
                            {{ form_start(form) }}
                                <div class="card h-100">
                                    <h2 class="card-header">Modifier un accès</h2>
                                    {{ include("ui/client/company/_form.html.twig", { form: form }) }}
                                    <div class="card-footer p-0 d-flex">
                                        <a href="{{ path("client_company_list") }}" class="btn d-block flex-grow-1 btn-outline-secondary rounded-0 border-0">
                                            Retour
                                        </a>
                                        <button type="submit" class="btn d-block flex-grow-1 btn-outline-success rounded-0 border-0">
                                            Modifier
                                        </button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
