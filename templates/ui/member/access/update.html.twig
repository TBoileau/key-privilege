{% extends "layouts/page.html.twig" %}

{% block breadcrumb %}
    {{ include("components/breadcrumb.html.twig", {items: [
        {route: "account_index", label: "Mon compte"},
        {route: "member_access_list", label: "Gestion des accès adhérent"},
        {route: "member_access_update", routeParams: {id: form.vars.data.id}, label: "Modifier un accès"}
    ]}) }}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">Gestion des accès adhérent</h1>
                <div class="section-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-8">
                            {{ form_start(form) }}
                                <div class="card h-100">
                                    <h2 class="card-header">Modifier un accès</h2>
                                    {{ include("ui/member/access/_form.html.twig", {form: form}) }}
                                    <div class="card-footer p-0 d-flex">
                                        <a href="{{ path("member_access_list") }}" class="btn d-block flex-grow-1 btn-outline-secondary rounded-0 border-0">
                                            Retour
                                        </a>
                                        <button type="submit" class="btn d-block flex-grow-1 btn-outline-success rounded-0 border-0">
                                            Modifier
                                        </button>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
