{% extends "layouts/page.html.twig" %}

{% block breadcrumb %}
    {{ include("components/breadcrumb.html.twig", {items: [
        {route: "account_index", label: "Mon compte"},
        {route: "account_edit_delivery_address", label: "Modifier l'adresse de facturation"}
    ]}) }}
{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-12">
            <section class="section">
                <h1 class="section-header">
                    <span class="icon icon-xl icon-profile me-2"></span>
                    Modifier l'adresse de facturation
                </h1>
                <div class="section-body">
                    <div class="row justify-content-center">
                        <div class="col-12 col-lg-8">
                            {{ form_start(form) }}
                            <div class="card h-100">
                                <div class="card-body">
                                    {{ form_errors(form) }}

                                    <div class="row mb-3">
                                        <div class="col-6">
                                            {{ form_row(form.firstName) }}
                                        </div>
                                        <div class="col-6">
                                            {{ form_row(form.lastName) }}
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            {{ form_row(form.professional) }}
                                        </div>
                                        <div class="col-6">
                                            {{ form_row(form.companyName) }}
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            {{ form_row(form.streetAddress) }}
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-12">
                                            {{ form_row(form.restAddress) }}
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-12 col-md-6 mb-3 mb-md-0">
                                            {{ form_row(form.zipCode) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(form.locality) }}
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12 col-md-6 mb-3 mb-md-0">
                                            {{ form_row(form.phone) }}
                                        </div>
                                        <div class="col-12 col-md-6">
                                            {{ form_row(form.email) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer p-0 d-flex">
                                    <a href="{{ path("account_index") }}" class="btn d-block flex-grow-1 btn-outline-secondary rounded-0 border-0">
                                        Retour
                                    </a>
                                    <button type="submit" class="btn d-block flex-grow-1 btn-outline-success rounded-0 border-0">
                                        Modifier
                                    </button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
