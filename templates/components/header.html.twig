<header>
    <div class="container d-none d-lg-block">
        <div class="d-flex justify-content-between py-3">
            <img src="{{ asset("build/images/logo.png") }}" alt="Key Privilege" class="logo flex-shrink-0">
            <div class="identity">
                <div class="identity-left">
                    <div class="identity-name">
                        Bonjour <span>{{ app.user.fullName }}</span>
                    </div>
                    <div class="identity-balance">
                        <span class="icon icon-key icon-sm"></span>
                        Votre compte :&nbsp;<span>{{ app.user.account.balance }} clés</span>
                    </div>
                </div>
                <div class="identity-right">
                    <div class="identity-logo">
                        <img src="https://via.placeholder.com/150x60" alt="">
                    </div>
                    {% if not is_granted('IS_IMPERSONATOR') %}
                        <a href="{{ path("security_logout") }}" class="identity-logout">
                            <span class="fas fa-times"></span> Se déconnecter
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light mt-0 mt-lg-3">
        <div class="container">
            <a class="navbar-brand d-lg-none" href="{{ path("home") }}">
                <img src="{{ asset("build/images/logo_small.png") }}" alt="Key Privilege" class="h-100">
            </a>
            <div class="d-flex d-lg-none align-items-center fw-bold">
                <span class="d-none d-sm-inline">Votre compte :</span>&nbsp;<span>{{ app.user.account.balance }} clés</span>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#header-navbar" aria-controls="header-navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="header-navbar">
                <ul class="navbar-nav mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path("home") }}">Accueil</a>
                    </li>
                    {% if is_granted("ROLE_CLIENT_ACCESS") or is_granted("ROLE_CLIENT_COMPANY") %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown-clients" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Clients
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown-clients">
                                {% if is_granted("ROLE_CLIENT_COMPANY") %}
                                    <li><a class="dropdown-item" href="{{ path("client_company_create") }}">Créer une société</a></li>
                                    <li><a class="dropdown-item" href="{{ path("client_company_list") }}">Gestion des sociétés</a></li>
                                {% endif %}
                                {% if is_granted("ROLE_CLIENT_ACCESS") and is_granted("ROLE_CLIENT_COMPANY") %}
                                    <li><hr class="dropdown-divider"></li>
                                {% endif %}
                                {% if is_granted("ROLE_CLIENT_ACCESS") %}
                                    <li><a class="dropdown-item" href="{{ path("client_access_create") }}">Créer un accès pour une société</a></li>
                                    <li><a class="dropdown-item" href="{{ path("client_access_list") }}">Gestion des accès</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    {% endif %}
                    {% if is_granted("ROLE_SHOP") %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown-shop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Boutique
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown-shop">
                                <li><a class="dropdown-item" href="{{ path("shop_index") }}">Boutique</a></li>
                                <li><a class="dropdown-item" href="{{ path("cart_index") }}">Panier</a></li>
                                <li><a class="dropdown-item" href="{{ path("order_index") }}">Commandes</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    {% if not is_granted("ROLE_KEY_PURCHASE") %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path("key_index") }}">Compte clés</a>
                        </li>
                    {% else %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdown-keys" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Compte clés
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown-keys">
                                <li><a class="dropdown-item" href="{{ path("key_index") }}">Tableau de bord</a></li>
                                <li><a class="dropdown-item" href="{{ path("key_purchase") }}">Acheter des clés</a></li>
                            </ul>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("account_index") }}">Mon compte</a>
                    </li>
                    {% if not is_granted('IS_IMPERSONATOR') %}
                        <li class="nav-item d-lg-none">
                            <a class="nav-link" href="{{ path("security_logout") }}">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a href="{{ impersonation_exit_path(path('home') ) }}" class="nav-link">Retour à mon accès</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>
