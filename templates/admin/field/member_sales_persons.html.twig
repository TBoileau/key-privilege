<div class="card">
    <div class="card-header" id="header-sales-persons">
        <h2 class="mb-0">
            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse-sales-persons" aria-expanded="false" aria-controls="collapse-sales-persons">
                Liste des commerciaux ({{ field.value|length }})
            </button>
        </h2>
    </div>
    <div id="collapse-sales-persons" class="collapse" aria-labelledby="header-sales-persons">
        <ul class="list-group list-group-flush">
            {% for sales_person in field.value %}
                {% set url = ea_url().setDashboard('App\\Controller\\Admin\\DashboardController').setController('App\\Controller\\Admin\\SalesPersonCrudController').setAction('detail').setEntityId(sales_person.id) %}
                <li class="list-group-item">
                    <a href="{{ url }}">
                        {{ sales_person.fullName }}
                    </a>
                </li>
            {% else %}
            <li class="list-group-item">
                Aucun commercial(e)
            </li>
            {% endfor %}
        </ul>
    </div>
</div>
